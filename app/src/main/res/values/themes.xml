<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="android:background">#fff</item>
    </style>
    <style name="maintext">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#101820</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">0</item>
    </style>
    <style name="resulttext">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#101820</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">0</item>
    </style>
    <style name="button2">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="backgroundTint">#FEE715</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#101820</item>
    </style>
    <style name="button1">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#101820</item>
    </style>
    <style name="custombtn">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:src">@drawable/back_button_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FEE715</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />
</resources>